@{
    ViewData["Title"] = "Video Lessons";
}

<div class="container py-5">
    <h1 class="mb-4">Video Lessons</h1>
    <p class="lead mb-5">Enhance your language learning with our video lessons. Watch native speakers, learn pronunciation, and improve your listening skills.</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <img src="https://images.unsplash.com/photo-1520986606214-8b456906c813?w=600&q=80" class="card-img-top" alt="English">
                <div class="card-body">
                    <h5 class="card-title">English Video Lessons</h5>
                    <p class="card-text">Watch instructional videos to improve your English pronunciation, comprehension, and conversational skills.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="btn btn-primary w-100">View Lessons</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <img src="https://images.unsplash.com/photo-1580100586938-02822d99c4a8?w=600&q=80" class="card-img-top" alt="Kazakh">
                <div class="card-body">
                    <h5 class="card-title">Kazakh Video Lessons</h5>
                    <p class="card-text">Learn Kazakh through video lessons featuring native speakers and practical everyday conversations.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="btn btn-primary w-100">View Lessons</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <img src="https://images.unsplash.com/photo-1541300613939-71366b37c92e?w=600&q=80" class="card-img-top" alt="Turkish">
                <div class="card-body">
                    <h5 class="card-title">Turkish Video Lessons</h5>
                    <p class="card-text">Master Turkish pronunciation and listening skills with our comprehensive video lesson library.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="btn btn-primary w-100">View Lessons</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="mb-4">Featured Video Lessons</h2>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card mb-4 shadow-sm">
                    <div class="ratio ratio-16x9">
                        <div class="bg-dark d-flex align-items-center justify-content-center text-white">
                            <div class="text-center">
                                <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                                <p class="mt-2">Video lesson preview (videos will be available soon)</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Introduction to Basic Conversations</h5>
                        <p class="card-text">Learn how to introduce yourself and have basic conversations in your target language.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">15 minutes</small>
                            <span class="badge bg-primary">Beginner</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>